    <main class="flex-1 bg-ivory p-8 flex flex-col items-center">
        <div class="flex items-center justify-center mb-8 w-full">
            <div class="relative page-banner bg-cover bg-center h-48 w-full max-w-4xl rounded-lg shadow-lg">
                <div class="absolute inset-0 bg-black bg-opacity-25 rounded-lg"></div>
                <h2 class="relative z-10 text-5xl font-bold text-white drop-shadow-xl text-center flex items-center justify-center h-full">Add a Location</h2>
            </div>
        </div>
    
        <div class="w-full max-w-lg bg-softWhite p-4 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold mb-4 text-center">Create a New Location</h1>
    
            <form id="create-location-form">
                <div class="mb-4">
                    <label for="location-name" class="block text-charcoal mb-2">Location Name</label>
                    <input type="text" id="location-name" class="w-full p-2 border border-chocolateBrown rounded" placeholder="Enter location name">
                </div>
                <div class="mb-4">
                    <label for="location-description" class="block text-charcoal mb-2">Location Description</label>
                    <textarea id="location-description" class="w-full p-2 border border-chocolateBrown rounded" placeholder="Enter location description" rows="5"></textarea>
                </div>
                <div class="mb-4 p-4 border border-chocolateBrown rounded-lg">
                    <label for="location-images" class="block text-charcoal mb-2">Upload Images</label>
                    <div id="image-upload-placeholder" class="w-full h-48 border border-dashed border-charcoal flex items-center justify-center rounded-lg">Image Upload Widget Placeholder</div>
                </div>
                <button type="submit" class="w-full bg-oceanBlue text-white p-2 rounded hover:bg-goldenYellow transition">Save Location</button>
            </form>
        </div>
    </main>