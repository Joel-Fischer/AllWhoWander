<!-- main content -->
        <main class="flex-1 bg-ivory p-8">
            <h1 class="text-3xl font-bold mb-4">Plan Your Adventure</h1>
            
            <!-- Trip planning content goes here -->
            <form>
                <div class="mb-4">
                    <label for="destination" class="block text-charcoal mb-2">Destination</label>
                    <input type="text" id="destination" class="w-full p-2 border border-chocolateBrown rounded" placeholder="Enter your destination">
                </div>
                <div class="mb-4">
                    <label for="startDate" class="block text-charcoal mb-2">Start Date</label>
                    <input type="text" id="startDate" class="datepicker-input w-full p-2 border border-chocolateBrown rounded" placeholder="Select start date">
                </div>
                <div class="mb-4">
                    <label for="endDate" class="block text-charcoal mb-2">End Date</label>
                    <input type="text" id="endDate" class="datepicker-input w-full p-2 border border-chocolateBrown rounded" placeholder="Select end date">
                </div>
                <button type="submit" class="w-full bg-oceanBlue text-white p-2 rounded hover:bg-goldenYellow transition">Create Trip</button>
            </form>
        </main>


    <script src="https://cdn.jsdelivr.net/npm/@flowbite/datepicker@1.4.0/dist/datepicker.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const datepickerInputs = document.querySelectorAll('.datepicker-input');
            datepickerInputs.forEach(input => {
                new Datepicker(input, {
                    format: 'mm/dd/yyyy'
                });
            });
        });
    </script>
