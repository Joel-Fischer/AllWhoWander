    <main class="flex-1 bg-ivory p-8">
        <h1 class="text-3xl font-bold mb-4">Create Activity</h1>
        
        <form id="create-activity-form">
            <div class="bg-softWhite p-4 rounded-lg shadow-lg mb-8">
                <h2 id="location-name" class="text-2xl font-bold text-charcoal">Location Name Placeholder</h2>
            </div>
            <div class="mb-4">
                <label for="activity-name" class="block text-charcoal mb-2">Activity Name</label>
                <input type="text" id="activity-name" class="w-full p-2 border border-chocolateBrown rounded" placeholder="Enter activity name">
            </div>
            <div class="mb-4">
                <label for="activity-description" class="block text-charcoal mb-2">Activity Description</label>
                <textarea id="activity-description" class="w-full p-2 border border-chocolateBrown rounded" placeholder="Enter activity description" rows="5"></textarea>
            </div>
            <div class="mb-4 p-4 border border-chocolateBrown rounded-lg">
                <label for="activity-images" class="block text-charcoal mb-2">Upload Images</label>
                <div id="image-upload-placeholder" class="w-full h-48 border border-dashed border-charcoal flex items-center justify-center rounded-lg">Image Upload Widget Placeholder</div>
            </div>
            <button type="submit" class="w-full bg-oceanBlue text-white p-2 rounded hover:bg-goldenYellow transition">Save Activity</button>
        </form>
    </main>