   <main class="flex flex-1 items-center justify-center p-6 border-2 border-chocolateBrown">
        <div class="max-w-md w-full bg-softWhite p-12 rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold mb-6">Register</h2>
            <form>
                <div class="mb-6">
                    <label for="name" class="block text-charcoal mb-2">Name</label>
                    <input type="text" id="name" class="w-full p-3 border border-chocolateBrown rounded" placeholder="Enter your name">
                </div>
                <div class="mb-6">
                    <label for="email" class="block text-charcoal mb-2">Email</label>
                    <input type="email" id="email" class="w-full p-3 border border-chocolateBrown rounded" placeholder="Enter your email">
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-charcoal mb-2">Password</label>
                    <input type="password" id="password" class="w-full p-3 border border-chocolateBrown rounded" placeholder="Enter your password">
                </div>
                <div class="mb-6">
                    <label for="confirm_password" class="block text-charcoal mb-2">Confirm Password</label>
                    <input type="password" id="confirm_password" class="w-full p-3 border border-chocolateBrown rounded" placeholder="Confirm your password">
                </div>
                <button type="submit" class="w-full bg-oceanBlue text-white p-3 rounded hover:bg-goldenYellow transition">Register</button>
            </form>
        </div>
    </main>